{{!
    @template block_myoverview/main

    Modern main content area for the myoverview block with shadcn/ui design.
}}

<div id="block-myoverview-{{uniqid}}" class="modern-course-overview" data-region="myoverview" role="navigation">
    
    <!-- Course Filter Controls -->
    <div class="course-controls-container" role="search" data-region="filter" aria-label="{{#str}} aria:controls, block_myoverview {{/str}}">
        <div class="course-filters">
            {{> block_myoverview/nav-grouping-selector }}
            {{> block_myoverview/nav-search-widget }}
            {{> block_myoverview/nav-sort-selector }}
            {{#displaydropdown}}
                {{> block_myoverview/nav-display-selector }}
            {{/displaydropdown}}
        </div>
    </div>

    <!-- Course Grid Container -->
    <div class="course-grid-container">
        {{> block_myoverview/courses-view }}
    </div>
</div>

{{#js}}
require(
[
    'jquery',
    'block_myoverview/main',
],
function(
    $,
    Main
) {
    var root = $('#block-myoverview-{{uniqid}}');
    Main.init(root);
});
{{/js}}