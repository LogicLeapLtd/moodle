{{!
    @template block_myoverview/view-cards

    Modern cards view for the myoverview block with shadcn/ui design.
}}

{{< core_course/coursecards }}
    {{$menu}}
        <div class="course-menu-container">
            {{> block_myoverview/course-action-menu }}
        </div>
    {{/menu}}
    {{$progress}}
        {{#hasprogress}}
            <div class="course-progress-container">
                {{> block_myoverview/progress-bar}}
            </div>
        {{/hasprogress}}
    {{/progress}}
    {{$coursename}}
        <span class="course-name-text" title="{{fullname}}">
            <span class="visually-hidden">{{{fullname}}}</span>
            <span aria-hidden="true">
                {{#shortentext}}55, {{{fullname}}} {{/shortentext}}
            </span>
        </span>
    {{/coursename}}
    {{$coursecategory}}
        {{#showcoursecategory}}
            <span class="visually-hidden">
                {{#str}}aria:coursecategory, core_course{{/str}}
            </span>
            <span class="course-category-text">
                {{{coursecategory}}}
            </span>
        {{/showcoursecategory}}
    {{/coursecategory}}
    {{$divider}}
        {{#showcoursecategory}}
            <div class="category-divider">â€¢</div>
        {{/showcoursecategory}}
    {{/divider}}
{{/ core_course/coursecards }}