{{!
    @template theme_megamenu/login

    Modern login page layout.
}}
<!DOCTYPE html>
<html {{{ output.htmlattributes }}}>
<head>
    <title>{{{ output.page_title }}}</title>
    <link rel="shortcut icon" href="{{{ output.favicon }}}" />
    {{{ output.standard_head_html }}}
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            background: linear-gradient(135deg, hsl(var(--background)) 0%, hsl(var(--muted)) 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }
        
        .login-container {
            width: 100%;
            max-width: 28rem;
            padding: 1.5rem;
        }
        
        .login-card {
            background: hsl(var(--card));
            border: 1px solid hsl(var(--border));
            border-radius: calc(var(--radius) + 4px);
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
            padding: 2rem;
            margin-bottom: 1rem;
        }
        
        .login-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .login-logo {
            width: 64px;
            height: 64px;
            margin: 0 auto 1rem auto;
            border-radius: 50%;
            background: hsl(var(--primary));
            display: flex;
            align-items: center;
            justify-content: center;
            color: hsl(var(--primary-foreground));
            font-size: 1.5rem;
            font-weight: 600;
        }
        
        .login-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: hsl(var(--foreground));
            margin: 0 0 0.5rem 0;
        }
        
        .login-subtitle {
            font-size: 0.875rem;
            color: hsl(var(--muted-foreground));
            margin: 0;
        }
        
        .login-form {
            space-y: 1rem;
        }
        
        .form-group {
            margin-bottom: 1rem;
        }
        
        .form-label {
            display: block;
            font-size: 0.875rem;
            font-weight: 500;
            color: hsl(var(--foreground));
            margin-bottom: 0.5rem;
        }
        
        .form-input {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid hsl(var(--border));
            border-radius: var(--radius);
            background: hsl(var(--background));
            color: hsl(var(--foreground));
            font-size: 0.875rem;
            line-height: 1.25rem;
            transition: all 0.2s cubic-bezier(0.16, 1, 0.3, 1);
        }
        
        .form-input:focus {
            outline: none;
            border-color: hsl(var(--ring));
            box-shadow: 0 0 0 2px hsl(var(--ring) / 0.2);
        }
        
        .form-input::placeholder {
            color: hsl(var(--muted-foreground));
        }
        
        .login-button {
            width: 100%;
            padding: 0.75rem 1rem;
            background: hsl(var(--primary));
            color: hsl(var(--primary-foreground));
            border: none;
            border-radius: var(--radius);
            font-size: 0.875rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s cubic-bezier(0.16, 1, 0.3, 1);
            margin-top: 1rem;
        }
        
        .login-button:hover {
            background: hsl(var(--primary) / 0.9);
            transform: translateY(-1px);
        }
        
        .login-button:focus {
            outline: none;
            box-shadow: 0 0 0 2px hsl(var(--ring));
        }
        
        .login-button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
            transform: none;
        }
        
        .login-links {
            text-align: center;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid hsl(var(--border));
        }
        
        .login-link {
            color: hsl(var(--primary));
            text-decoration: none;
            font-size: 0.875rem;
            transition: color 0.2s ease;
        }
        
        .login-link:hover {
            color: hsl(var(--primary) / 0.8);
            text-decoration: underline;
        }
        
        .login-divider {
            margin: 0 0.5rem;
            color: hsl(var(--muted-foreground));
        }
        
        .error-message {
            background: hsl(var(--destructive) / 0.1);
            border: 1px solid hsl(var(--destructive) / 0.3);
            color: hsl(var(--destructive));
            padding: 0.75rem 1rem;
            border-radius: var(--radius);
            font-size: 0.875rem;
            margin-bottom: 1rem;
        }
        
        .login-footer {
            text-align: center;
            color: hsl(var(--muted-foreground));
            font-size: 0.75rem;
            margin-top: 2rem;
        }
        
        .language-selector {
            position: absolute;
            top: 1rem;
            right: 1rem;
        }
        
        @media (max-width: 640px) {
            .login-container {
                padding: 1rem;
            }
            
            .login-card {
                padding: 1.5rem;
            }
        }
    </style>
</head>

<body {{{ bodyattributes }}}>
    <div class="login-container">
        {{#langmenu}}
        <div class="language-selector">
            {{> theme_boost/language_menu }}
        </div>
        {{/langmenu}}
        
        <div class="login-card">
            <div class="login-header">
                {{# output.should_display_navbar_logo }}
                    <img src="{{output.get_compact_logo_url}}" class="login-logo" alt="{{sitename}}" style="border-radius: var(--radius);">
                {{/ output.should_display_navbar_logo }}
                {{^ output.should_display_navbar_logo }}
                    <div class="login-logo">
                        {{ sitename.0 }}
                    </div>
                {{/ output.should_display_navbar_logo }}
                
                <h1 class="login-title">{{#str}}welcome, theme_megamenu{{/str}}</h1>
                <p class="login-subtitle">{{#str}}logintoyouraccount, theme_megamenu{{/str}}</p>
            </div>
            
            {{#output.page_doc_ready_js}}
                {{{ . }}}
            {{/output.page_doc_ready_js}}
            
            <div id="page-content">
                {{{ output.main_content }}}
            </div>
        </div>
        
        <div class="login-footer">
            <p>&copy; {{{ sitename }}} {{ "now"|date("Y") }}</p>
        </div>
    </div>
    
    {{{ output.standard_end_of_body_html }}}
</body>
</html>